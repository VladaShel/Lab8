<Window x:Class="FlightSimulatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorWPF"
        mc:Ignorable="d"
        Title="Главное Меню" Height="324" Width="300" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid>
        <Button x:Name="StartButton" Content="Запустить новую симуляцию" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Height="30" Width="227" Click="StartButton_Click"/>
        <Button x:Name="LoadButton" Content="Загрузить симуляцию" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="228" Click="LoadButton_Click" Margin="0,166,0,0"/>
        <Button x:Name="ControlButton" Content="Управление" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="228" Margin="0,232,0,0" Click="ControlButton_Click"/>

    </Grid>
</Window>
